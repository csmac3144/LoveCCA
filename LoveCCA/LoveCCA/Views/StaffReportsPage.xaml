<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
              xmlns:vm="clr-namespace:LoveCCA.ViewModels"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:LoveCCA.ViewModels"  
             xmlns:model="clr-namespace:LoveCCA.Models"  
             x:Class="LoveCCA.Views.StaffReportsPage">
    <ContentPage.BindingContext>
        <vm:StaffReportsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#10448C</Color>
            <Color x:Key="Accent">#D9E7F3</Color>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ScrollView Grid.Row="1">
                    <CollectionView x:Name="ReportsListView"
                ItemsSource="{Binding Reports}"
                SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand"
                                             Padding="10" x:DataType="model:ReportsModel">
                                    <Label FontSize="60" VerticalTextAlignment="Center" Text="{Binding Icon}" 
                            LineBreakMode="NoWrap" />
                                    <Label FontSize="Title" VerticalTextAlignment="Center"  Text="{Binding Description}" 
                            LineBreakMode="NoWrap"/>
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer 
                                NumberOfTapsRequired="1"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:StaffReportsViewModel}}, Path=ItemTappedCommand}"		
                                CommandParameter="{Binding .}">
                                        </TapGestureRecognizer>
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>